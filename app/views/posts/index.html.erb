<% @posts.each do |post| %>
    <h3><%= post.title %></h3>
    <p><%=redcloth (post.content) %></p>
    <%= post.author_id %> |
    <%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %> |
	<hr/>
<% end %>


