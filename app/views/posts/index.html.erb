<% @posts.each do |post| %>
  <article>
  <h3><%= post.title %></h3>
  <p>
  <%= redcloth(post.content) %>
  </p>
  <%= link_to 'Show', post %> |
  <% if current_user.try (:admin) %>
  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %>
  <% end %>
  </article>
  <% end %>

<br/>

