<p id="notice"><%= notice %></p>

<p>
  <%= @post.title %>
</p>

<p>
  <%=redcloth (@post.content) %>
</p>

<% if current_user.try(:admin) %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>

<h2>Add a Comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
