<p id="notice"><%= notice %></p>

<p>
  <%= @post.title %>
</p>

<p>
  <%=redcloth (@post.content) %>
</p>

<% if current_user.try(:admin) %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>

<h3>Comments:</h3>
<% @post.comments.reverse.each do |comment| %>
  <%= comment.content %>
  <hr/>
<% end %> 

<% if user_signed_in? %>
  <h2>Add a Comment:</h2>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
     </div>
  <% end %>
<% end %>
